{
  "manifest_version": 3,
  "name": "LinkedIn Comment Generator",
  "version": "1.0",
  "description": "Add AI-powered comment generation to LinkedIn posts",
  "permissions": [
    "activeTab",
    "storage",
    "background"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
